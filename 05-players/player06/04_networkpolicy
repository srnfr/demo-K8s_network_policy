# mon commentaire
kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: player06-microseg
  namespace: ns-player06
spec:
  podSelector:
    matchLabels:
      app: player06
  ingress:
  - from:
    - podSelector:
        matchLabels:
          app: monitoring
      namespaceSelector: 
         matchLabels:
           kubernetes.io/metadata.name: default 
   - namespaceSelector:
         matchLabels:
          app: players
